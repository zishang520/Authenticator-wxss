.select-box {
    position: relative;
    width: 100%;
    font-size: 16px;
}

.select-current {
    position: relative;
    width: 100%;
    padding: 0 5px;
    line-height: 35px;
    border: 0.5px solid rgba(0, 0, 0, .12);
    border-radius: 3px;
    box-sizing: border-box;
}

.select-current::after {
    position: absolute;
    display: block;
    right: 8px;
    top: 15px;
    content: '';
    width: 0;
    height: 0;
    border: 5px solid transparent;
    border-top: 5px solid var(--grey);
}

.current-name {
    display: block;
    width: 85%;
    height: 100%;
    word-wrap: normal;
    overflow: hidden;
}

.option-list {
    position: absolute;
    left: 0;
    /*top: 38px;*/
    width: 100%;
    /*padding: 6px 10px 5px 10px;*/
    border-radius: 3px;
    box-sizing: border-box;
    z-index: 99;
    box-shadow: 0px 0px 0.5px 0.5px rgba(0, 0, 0, 0.2) inset;
    background: var(--grey-100);
    /*transition: all 2s linear;*/
}

.option {
    min-height: auto;
    padding: 0 16px;
    width: 100%;
    border-bottom: 0.5px solid rgba(0, 0, 0, .12);
}

.option:last-child {
    border-bottom: none;
}